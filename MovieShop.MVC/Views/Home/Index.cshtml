@model IEnumerable<ApplicationCore.Models.Response.MovieCardResponseModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="rounded">
    <div class="container-fluid bg-light">
        <div class="row">
            @foreach (var model in Model)
            {
                <div class="col-6 col-lg-3 col-sm-4 col-xl-2">
                    @await Html.PartialAsync("_MovieCard", model)
                </div>
            }
        </div>

    </div>
</div>

