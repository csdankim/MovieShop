@model IEnumerable<ApplicationCore.Models.Response.MovieResponseModel>

@{
    ViewBag.Title = "Movies By Genre";
    Layout = "_Layout";
}

<div class="rounded">
    <div class="container-fluid bg-light">
        <div class="row">
            @foreach (var model in Model)
            {
                <div class="col-6 col-lg-3 col-sm-4 col-xl-2">
                    @await Html.PartialAsync("_MovieCard", model)
                </div>
            }
        </div>

    </div>
</div>
